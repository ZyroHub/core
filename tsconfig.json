{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist/declarations",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "resolveFullExtension": ".js",
    "fileExtensions": {
      "inputGlob": "{js,mjs}",
      "outputCheck": ["js", "json", "mjs"]
    }
  }
}
